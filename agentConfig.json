{
  "agent_name": "SkylarIQ",
  "owner": "Vasudev Patil",
  "description": "Structured and logical Lang Graph Agent for customer support workflow.",
  "input_schema": {
    "customer_name": "string",
    "email": "string",
    "query": "string",
    "priority": "string",
    "ticket_id": "string"
  },
  "stages": [
    {
      "name": "INTAKE",
      "mode": "deterministic",
      "mcp_client": "COMMON",
      "abilities": [
        "accept_payload"
      ]
    },
    {
      "name": "UNDERSTAND",
      "mode": "deterministic",
      "mcp_client": "COMMON",
      "abilities": [
        "parse_request_text",
        "extract_entities"
      ]
    },
    {
      "name": "PREPARE",
      "mode": "deterministic",
      "mcp_client": "COMMON",
      "abilities": [
        "normalize_fields",
        "enrich_records",
        "add_flags_calculations"
      ]
    },
    {
      "name": "ASK",
      "mode": "deterministic",
      "mcp_client": "ATLAS",
      "abilities": [
        "clarify_question"
      ]
    },
    {
      "name": "WAIT",
      "mode": "deterministic",
      "mcp_client": "COMMON",
      "abilities": [
        "extract_answer",
        "store_answer"
      ]
    },
    {
      "name": "RETRIEVE",
      "mode": "deterministic",
      "mcp_client": "ATLAS",
      "abilities": [
        "knowledge_base_search",
        "store_data"
      ]
    },
    {
      "name": "DECIDE",
      "mode": "non_deterministic",
      "mcp_client": "COMMON",
      "abilities": [
        "solution_evaluation",
        "escalation_decision",
        "update_payload"
      ]
    },
    {
      "name": "UPDATE",
      "mode": "deterministic",
      "mcp_client": "COMMON",
      "abilities": [
        "update_ticket",
        "close_ticket"
      ]
    },
    {
      "name": "CREATE",
      "mode": "deterministic",
      "mcp_client": "ATLAS",
      "abilities": [
        "response_generation"
      ]
    },
    {
      "name": "DO",
      "mode": "non_deterministic",
      "mcp_client": "ATLAS",
      "abilities": [
        "execute_api_calls",
        "trigger_notifications"
      ]
    },
    {
      "name": "COMPLETE",
      "mode": "deterministic",
      "mcp_client": "COMMON",
      "abilities": [
        "output_payload"
      ]
    }
  ]
}